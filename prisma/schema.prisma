generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  name          String
  email         String   @unique
  emailVerified Boolean  @default(false)
  image         String?
  phone         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  role       String?   @default("user")
  banned     Boolean?  @default(false)
  banReason  String?
  banExpires DateTime?

  // Relations
  sessions  Session[]
  accounts  Account[]
  orders    Order[]
  addresses Address[]

  @@map("user") // Better Auth table name lowercase 'user' prefer kore
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  expiresAt DateTime
  token     String   @unique
  ipAddress String? // Better Auth Security feature
  userAgent String? // Better Auth Security feature
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("session")
}

model Account {
  id                    String    @id @default(cuid())
  userId                String
  accountId             String
  providerId            String
  accessToken           String?
  refreshToken          String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  idToken               String?
  password              String? // For credential accounts
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("account")
}

model Verification {
  id         String   @id @default(cuid())
  identifier String
  value      String // The OTP or Token value
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("verification")
}

model Product {
  id          String  @id @default(cuid())
  name        String
  slug        String  @unique
  description String?
  price       Float // Decimal ও ব্যবহার করতে পারেন, তবে সহজ রাখার জন্য Float দিলাম
  stock       Int
  image       String? // ইমেজের URL

  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  orderItems OrderItem[]
  category   Category?   @relation(fields: [categoryId], references: [id])
  categoryId String?

  @@map("products") // ডাটাবেসে টেবিলের নাম হবে 'products'
}

// 1. Enums
enum OrderStatus {
  PENDING
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
  REFUNDED
}

enum PaymentMethod {
  COD
  STRIPE
}

// 2. Order Model
model Order {
  id          String  @id @default(cuid())
  orderNumber String  @unique
  // ✅ User Relation (Optional)
  // যদি ইউজার লগড-ইন থাকে, তাহলে ID থাকবে। গেস্ট হলে null থাকবে।
  userId      String?
  user        User?   @relation(fields: [userId], references: [id])

  // ✅ Shipping Info (Snapshot)
  // লগড-ইন বা গেস্ট, যেই হোক না কেন, এই অর্ডারের জন্য ঠিকানা এখানে ফিক্সড থাকবে।
  name    String // Receiver's Name
  email   String? // Contact Email
  phone   String // Contact Phone
  address String // Shipping Address

  // Order Details
  totalAmount Float
  status      OrderStatus @default(PENDING)

  // Payment Info
  paymentMethod PaymentMethod @default(COD)
  paymentStatus PaymentStatus @default(PENDING)

  // Stripe Data
  stripePaymentIntentId String? @unique

  // Relations
  items OrderItem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("orders")
}

// 3. Order Item Model (Snapshot of Product)
model OrderItem {
  id String @id @default(cuid())

  orderId String
  order   Order  @relation(fields: [orderId], references: [id], onDelete: Cascade)

  // প্রোডাক্ট ডিলিট হলেও অর্ডারের ডাটা যাতে থাকে, তাই রিলেশন অপশনাল রাখা যেতে পারে
  // অথবা শুধু productId স্ট্রিং হিসেবে রাখা হয় অনেক সময়। 
  // তবে রিলেশন রাখা ভালো অ্যানালিটিক্সের জন্য।
  productId String
  product   Product @relation(fields: [productId], references: [id])

  // Snapshot Fields
  // অফার শেষ হয়ে গেলে বা দাম বাড়লে যাতে আগের অর্ডারে সমস্যা না হয়
  name     String
  price    Float
  quantity Int
  image    String?

  @@map("order_items")
}

model Category {
  id          String  @id @default(uuid())
  name        String
  slug        String  @unique // URL এর জন্য (e.g. /electronics/laptops)
  description String? @db.Text // বড় ডেসক্রিপশন সাপোর্ট করার জন্য
  image       String? // Cloudinary URL

  // --- Advanced Features ---

  // 1. Hierarchy (Sub-categories Support)
  // এটি Self-Relation। যেমন: "Electronics" (Parent) -> "Laptops" (Child)
  parentId String?
  parent   Category?  @relation("CategoryHierarchy", fields: [parentId], references: [id])
  children Category[] @relation("CategoryHierarchy")

  // 2. Control Flags
  isActive   Boolean @default(true) // সাময়িকভাবে ক্যাটাগরি বন্ধ রাখার জন্য
  isFeatured Boolean @default(false) // হোমপেজে দেখানোর জন্য

  // 3. SEO Fields (Optional but Recommended)
  seoTitle       String?
  seoDescription String?

  // 4. Relations
  products Product[] // One-to-Many relation (Product model আপডেট করতে হবে)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([parentId]) // পারফরম্যান্সের জন্য ইনডেক্সিং
}

model SiteSettings {
  id           String    @id @default("general")
  topBarText   String?
  topBarLink   String? // নতুন: "Shop Now" এ ক্লিক করলে কই যাবে
  topBarActive Boolean   @default(true)
  topBarStart  DateTime?
  topBarEnd    DateTime?

  updatedAt DateTime @updatedAt

  @@map("site_settings")
}

model HeroSlide {
  id       String  @id @default(cuid())
  title    String
  subtitle String?
  image    String // Cloudinary Public ID
  link     String?
  order    Int     @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("hero_slides")
}

model Address {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  name    String
  phone   String
  street  String
  city    String
  state   String?
  zip     String
  country String  @default("Bangladesh")

  isDefault Boolean @default(false)
  type      String  @default("HOME") // HOME or WORK

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
